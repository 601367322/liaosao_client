<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:background="@drawable/chat_right_bg"
        android:gravity="right|center_vertical"
        android:minHeight="35dp"
        android:minWidth="60dp">

        <com.xl.custom.MyImageView
            android:id="@+id/voice_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/chat_right_animation" />
    </LinearLayout>

    <ProgressBar
        android:layout_alignTop="@id/voice"
        android:layout_toLeftOf="@id/voice"
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <ImageView
        android:id="@+id/error"
        android:layout_width="20dp"
        android:layout_centerVertical="true"
        android:layout_height="20dp"
        android:src="@drawable/chat_error_icon"
        android:layout_toLeftOf="@id/voice"
        android:visibility="gone"/>
</RelativeLayout>