<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/mAdContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    tools:context="com.xl.activity.MainActivity">

    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="@color/white"
                app:fab_colorPressed="@color/white_pressed"
                app:fab_icon="@drawable/touch_my_face"
                app:fab_size="large"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/connect_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="@color/white"
                app:fab_colorPressed="@color/white_pressed"
                app:fab_icon="@drawable/vipface"
                app:fab_size="large"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/girl_god"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="@color/white"
                app:fab_colorPressed="@color/white_pressed"
                app:fab_icon="@drawable/girl_god"
                app:fab_size="large"/>

            <TextView
                android:id="@+id/managercount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/girl_god"
                android:layout_marginTop="5dp"
                android:background="@drawable/holo_red_msg_count_drawable"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"/>
        </RelativeLayout>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/white_pressed"
            app:fab_icon="@drawable/pay_float_btn"
            app:fab_size="large"/>
    </LinearLayout>

    <View
        android:id="@+id/manager"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:text="提示：部分小米用户无法弹出提示框，为了不影响您的正常使用，请手动启用（安全中心-授权管理-应用权限管理-聊烧-显示悬浮窗)"
        android:textColor="@color/primary_dark_material_light"
        android:textSize="12sp"
        android:visibility="gone"/>
</RelativeLayout>